<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/activity_menudetails_image"
        android:layout_width="200dp"
        android:layout_height="200dp"/>
    <TextView
        android:id="@+id/activity_menudetails_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:fontFamily="serif"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/activity_menudetails_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:fontFamily="monospace"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/activity_menudetails_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="normal"/>
    <TextView
        android:id="@+id/activity_menudetails_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="normal" />

</LinearLayout>