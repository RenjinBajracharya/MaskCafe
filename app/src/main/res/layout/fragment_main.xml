<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="#3c241b">

    <TextView
        android:id="@+id/fragment_main_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mask Cafe"
        android:textSize="45dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_margin="0dp"
        android:fontFamily="cursive"
        android:textColor="#c26f4d"/>
    <TextView
        android:id="@+id/fragment_main_zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01-4411857"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:textColor="#c26f4d"
        />
    <TextView
        android:id="@+id/fragment_main_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thamel,Kathmandu, Nepal"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:textColor="#c26f4d"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/masklogo"
        android:layout_gravity="center"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/fragment_main_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nothing brings people together like good food."
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:layout_margin="10dp"
        android:textColor="#c26f4d"
        />





</LinearLayout>